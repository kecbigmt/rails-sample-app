<p id="notice"><%= notice %></p>
<div class="content">
  <h1><%= @diary.title %></h1>
  <p><%= @diary.body %></p>
</div>
<nav class="level">
  <div class="level-left">
    <p><strong>作成者</strong> <%= link_to @diary.user.name, "/users/#{@diary.user.id}" %></p>
  </div>
  <div class="level-right">
    <div class="level-item">
      <p><strong>登録日時</strong> <%= @diary.created_at %></p>
    </div>
    <div class="level-item">
      <p><strong>更新日時</strong> <%= @diary.updated_at %></p>
    </div>
  </div>
</nav>

<%= link_to '編集する', edit_diary_path(@diary) %> |
<%= link_to '削除する', @diary, method: :delete, data: { confirm: '本当に削除しますか？' } %> |
<%= link_to '一覧に戻る', diaries_path %>
